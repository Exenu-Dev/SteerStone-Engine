### SERVER SETTINGS ###

## Server Port
#   Description: TCP port to reach the server.
#   Default: 37120
ServerPort = 37120

## BindIP
#	Description: Bind server to Ip/Host Name
#	Default: "127.0.0.1" - (Bind to all IPs on the system)
BindIP = "127.0.0.1"

## NetworkThreadProcessors
#	Description: Amount of worker socket listener threads to launch
#	Default: 1
NetworkThreadProcessors = 1

## PongInterval
#	Description: Pong interval time to sent to clients in milliseconds
#	Default:     10000 (in milliseconds)
PongInterval = 10000

## UseProcessors
#	Description: Processors mask for Windows systems.
#   Example:     A computer with 2 CPUs:
#                1 - 1st CPU only, 2 - 2nd CPU only, 3 - 1st and 2nd CPU, because 1 | 2 is 3
#   Default:     0  - (Selected by OS)
#                1+ - (Bit mask value of selected processors)
UseProcessors = 0

## ProcessPriority
#	Description: Process priority setting for Windows systems.
#	Default:     0 - (Normal)
#                1 - (High)
ProcessPriority = 0

### MYSQL SETTINGS ###

## UserDatabaseInfo
#	Description: Mysql account settings to connect to User Database
#	Example:     "hostname;port;username;password;database"
#   Default:     "127.0.0.1;3306;SteerStone;SteerStone;SteerStone"
UserDatabaseInfo = "127.0.0.1;3306;SteerStone;SteerStone;SteerStone"

## UserDatabaseInfo.MySQLConnections
#	Description: The amount of MySQL connections spawned to handle.
#   Default:     10 - (LoginDatabase.MySQLConnections)
UserDatabaseInfo.MySQLConnections  = 10

## RoomDatabaseInfo
#	Description: Mysql account settings to connect to Room Database
#	Example:     "hostname;port;username;password;database"
#   Default:     "127.0.0.1;3306;SteerStone;SteerStone;SteerStone"
RoomDatabaseInfo = "127.0.0.1;3306;SteerStone;SteerStone;SteerStone"

## RoomDatabaseInfo.MySQLConnections
#	Description: The amount of MySQL connections spawned to handle.
#   Default:     10 - (LoginDatabase.MySQLConnections)
RoomDatabaseInfo.MySQLConnections  = 10

